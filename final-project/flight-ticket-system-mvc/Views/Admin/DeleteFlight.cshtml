@model flight_ticket_system.Models.FlightsJay

@{
    ViewData["Title"] = "DeleteFlight";
    Layout = "_AdminLayout";
}

<h1>Delete flight</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Flight number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightNumber)
        </dd>
        <dt class = "col-sm-2">
            Flight name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightName)
        </dd>
        <dt class = "col-sm-2">
            Departure airport code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureAirportCode)
        </dd>
        <dt class = "col-sm-2">
            Arrival airport code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalCode)
        </dd>
        <dt class = "col-sm-2">
            Airline code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AirlineCode)
        </dd>
        <dt class = "col-sm-2">
            Departure date time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureDateTime)
        </dd>
        <dt class = "col-sm-2">
            Arrival date time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalDateTime)
        </dd>
        <dt class = "col-sm-2">
            Available seats
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableSeats)
        </dd>
        <dt class = "col-sm-2">
            Ticket price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketPrice)
        </dd>
    </dl>
    
    <form asp-action="DeleteFlight">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ShowFlights">Back to List</a>
    </form>
</div>
