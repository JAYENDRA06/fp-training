@model flight_ticket_system.Models.FlightsJay

@{
    ViewData["Title"] = "DetailsFlight";
    Layout = "_AdminLayout";
}

<h1>Details of flight</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Flight number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightNumber)
        </dd>
        <dt class = "col-sm-2">
            Flight name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightName)
        </dd>
        <dt class = "col-sm-2">
            Departure airport
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureAirportCodeNavigation.AirportName) (@Html.DisplayFor(model => model.DepartureAirportCode))
        </dd>
        <dt class = "col-sm-2">
            Arrival airport
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalCodeNavigation.AirportName) (@Html.DisplayFor(model => model.ArrivalCode))
        </dd>
        <dt class = "col-sm-2">
            Airline code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AirlineCode)
        </dd>
        <dt class = "col-sm-2">
            Airline name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AirlineCodeNavigation.AirlineName)
        </dd>
        <dt class = "col-sm-2">
            Departure date time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureDateTime)
        </dd>
        <dt class = "col-sm-2">
            Arrival date time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalDateTime)
        </dd>
        <dt class = "col-sm-2">
            Seats available
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableSeats)
        </dd>
        <dt class = "col-sm-2">
            Ticket price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketPrice)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "EditFlight", new { id = Model.FlightNumber }) |
    <a asp-action="ShowFlights">Back to List</a>
</div>
