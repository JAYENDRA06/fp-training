@model flight_ticket_system.Models.AirlinesJay

@{
    ViewData["Title"] = "EditAirline";
    Layout = "_AdminLayout";
}

<h1>Edit airline</h1>

<div>
    <a asp-action="ShowAirlines" class="text-decoration-none">< Back</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAirline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AirlineCode" class="control-label">Airline code</label>
                <input asp-for="AirlineCode" class="form-control" readonly />
                <span asp-validation-for="AirlineCode" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="AirlineName" class="control-label">Airline name</label>
                <input asp-for="AirlineName" class="form-control" />
                <span asp-validation-for="AirlineName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary px-4" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
