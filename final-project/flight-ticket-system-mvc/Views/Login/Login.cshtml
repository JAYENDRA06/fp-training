@model flight_ticket_system.Models.PassengersJay

@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<h1 class="text-center pt-5">Login</h1>

<div class="row d-flex justify-content-center align-items-center mt-2">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 d-flex justify-content-center">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p class="mt-3 text-center">New user? click <a asp-action="Register" class="text-decoration-none">here</a> to register</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
