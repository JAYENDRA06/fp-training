@model flight_ticket_system.Models.AirlinesJay

@{
    ViewData["Title"] = "DeleteAirline";
    Layout = "_AdminLayout";
}

<h1>Delete airline</h1>

<h5>Are you sure you want to delete this?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Airline code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AirlineCode)
        </dd>
        <dt class = "col-sm-2">
            Airline name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AirlineName)
        </dd>
    </dl>
    
    <form asp-action="DeleteAirline">
        <input type="submit" value="Delete" class="btn btn-danger px-4" /> |
        <a asp-action="ShowAirlines">Back to List</a>
    </form>
</div>
