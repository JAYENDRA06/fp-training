@model flight_ticket_system.Models.BookingsJay

@{
    ViewData["Title"] = "BookFlight";
}

<h1>Confirm booking</h1>
<div>
    <a asp-action="FlightDetails" asp-route-id="@Model.FlightNumber" class="text-decoration-none" >< Flight details</a>
</div>

<h5>Are you sure you want to book this flight?</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookFlight">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightNumber" class="control-label">Flight number</label>
                <input asp-for="FlightNumber" class="form-control" readonly />
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>
            <div class="form-group d-none mt-2">
                <label asp-for="PassengerId" class="control-label"></label>
                <input asp-for="PassengerId" class="form-control" />
                <span asp-validation-for="PassengerId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="BookingDate" class="control-label">Booking date</label>
                <input asp-for="BookingDate" class="form-control" readonly />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="TotalCost" class="control-label">Cost per seat</label>
                <input asp-for="TotalCost" class="form-control" readonly />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Passengers" class="control-label"></label>
                <input asp-for="Passengers" class="form-control" />
                <span asp-validation-for="Passengers" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Book" class="btn btn-primary px-4" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
