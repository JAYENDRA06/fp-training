@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav">
    @{
        ViewBag.Data = @HttpContextAccessor.HttpContext.Session.GetString("uname");
    }
    @if (ViewBag.Data != null)
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-controller="Home" asp-action="Profile">Profile</a>
        </li>
        <li class="nav-item">
            <form>
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark" asp-controller="Login"
                    asp-action="Logout">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-controller="Login" asp-action="register">Register</a>
            @*@Html.ActionLink("Register","Create","Users")*@
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Login" asp-action="login">Login</a>
        </li>
    }