@model flight_ticket_system.Models.AirportsJay

@{
    ViewData["Title"] = "AddAirport";
    Layout = "_AdminLayout";
}

<h1>Add a new airport</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAirport">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AirportCode" class="control-label"></label>
                <input asp-for="AirportCode" class="form-control" />
                <span asp-validation-for="AirportCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportName" class="control-label"></label>
                <input asp-for="AirportName" class="form-control" />
                <span asp-validation-for="AirportName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowAirports">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
