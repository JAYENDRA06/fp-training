@model IEnumerable<flight_ticket_system.Models.PassengersJay>

@{
    ViewData["Title"] = "ShowUsers";
    Layout = "_AdminLayout";
}

<h1>Users</h1>

<p>
    <a asp-controller="Login" asp-action="Register">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                User Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id=item.PassengerId }) |
                @Html.ActionLink("Details", "DetailsUser", new { id=item.PassengerId }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id=item.PassengerId })
            </td>
        </tr>
}
    </tbody>
</table>
