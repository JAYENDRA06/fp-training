@model flight_ticket_system.Models.AirportsJay

@{
    ViewData["Title"] = "EditAirport";
    Layout = "_AdminLayout";
}

<h1>Edit airport</h1>

<div>
    <a asp-action="ShowAirports" class="text-decoration-none">< Back</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAirport">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AirportCode" class="control-label">Airport code</label>
                <input asp-for="AirportCode" class="form-control" readonly />
                <span asp-validation-for="AirportCode" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="AirportName" class="control-label">Airport name</label>
                <input asp-for="AirportName" class="form-control" />
                <span asp-validation-for="AirportName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary px-4" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
